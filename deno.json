{
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "exclude": [
      "./changelog.md"
    ]
  },
  "tasks": {
    "bench:markdown": "deno run -A .github/updateBenchmark.ts",
    "bench": "deno bench benchmark/basic.ts --allow-env",
    "build": "deno run -A build.ts mod.ts index.js",
    "check": "deno fmt --check && deno lint",
    "githooks": "deno run -A https://deno.land/x/githooks@0.1.0/githooks.ts",
    "upgrade": "deno run -A https://deno.land/x/upgrade@v0.3.0/mod.ts -q",
    "test": "deno test -A"
  }
}
